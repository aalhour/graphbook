  {\doPDFgetobjectreference{FDF}{docuextgstates}\PDFobjectreference
    \xdef\pgf@sys@pdf@possible@resources{\pgf@sys@pdf@possible@resources/ExtGState  \PDFobjectreference}}\donothing
