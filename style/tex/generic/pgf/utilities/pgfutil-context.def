% Module stuff

\long\def\pgfutil@usemodule#1{%
  % seems as if \usemodule resets \catcodes... handle that here:
  \long\edef\pgf@temp##1{%
    \noexpand\usemodule[##1]\noexpand\relax%
    \noexpand\catcode`\noexpand\@=\the\catcode`\@\relax
    \noexpand\catcode`\noexpand\|=\the\catcode`\|\relax
  }%
  \pgf@temp{#1}%
}



